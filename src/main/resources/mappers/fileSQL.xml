<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="hello.itemService.repository.FileRepository">

    <update id="insertFiles" parameterType="java.util.List">
        <foreach collection="list" item="file" separator=" " open="insert all" close="select * from dual">
        into BOARD_FILES(file_path, file_name, file_size, board_id)
        VALUES
            (#{file.filePath},#{file.fileName},#{file.fileSize},#{file.boardId})
        </foreach>
    </update>

    <delete id="deleteFiles">
        delete BOARD_FILES
        where BOARD_ID = #{id}
    </delete>

    <select id="findAll" resultType="hello.itemService.domain.File">
        select *
        from BOARD_FILES
    </select>

    <select id="findByBoardId" resultType="hello.itemService.domain.File">
        select file_path as filePath, file_name as fileName, file_size as fileSize, board_id as id
        from BOARD_FILES
        where BOARD_ID = #{id}
    </select>

</mapper>